# ================= FILE & DIRECTORY NAVIGATION =================
pwd                      # Show current directory
ls                       # List files
ls -l                    # Long listing
ls -a                    # Show hidden files
cd dir                   # Change directory
cd ..                    # Move up one level
cd ~                     # Go to home directory
find /path -name file    # Search for a file by name
locate filename          # Quickly find file (requires updatedb)

# ================= FILE & DIRECTORY MANAGEMENT =================
touch file.txt           # Create empty file
mkdir mydir              # Create directory
mkdir -p parent/child    # Create nested directories
cp file1 file2           # Copy file
cp -r dir1 dir2          # Copy directory
mv old new               # Rename/move
rm file.txt              # Delete file
rm -r dir                # Delete directory
rm -rf dir               # Force delete
tree                     # View directory tree

# ================= VIEWING & EDITING FILES =================
cat file.txt             # View file content
less file.txt            # View file with scroll
head file.txt            # First 10 lines
tail file.txt            # Last 10 lines
tail -f file.txt         # Follow updates to file
nano file.txt            # Edit with nano
vim file.txt             # Edit with vim
grep "text" file         # Search text inside file
grep -r "text" dir       # Recursive search in directory

# ================= LOG ANALYSIS & NAVIGATION =================
cd /var/log              # Go to log directory
ls /var/log              # List logs
tail -f syslog           # Live system log
tail -f messages         # General system messages
journalctl               # View systemd logs
journalctl -u service    # Logs for specific service
grep "error" logfile     # Search for errors in logs
less logfile             # Scroll through logs

# ================= USER & GROUP MANAGEMENT =================
whoami                   # Current user
id                       # User ID & groups
groups                   # Groups for current user
cat /etc/passwd          # List all users
cat /etc/group           # List all groups
adduser user1            # Add new user
usermod -aG group user1  # Add user to group
deluser user1            # Delete user
groupadd group1          # Create group
groupdel group1          # Delete group
passwd user1             # Change user password
cat /etc/passwd            # List all users
cat /etc/group             # List all groups
gpasswd -d user1 group     # Remove user from group

# ================= SYSTEM INFORMATION =================
uname -a                 # Kernel & system info
hostname                 # Show hostname
uptime                   # System uptime
df -h                    # Disk usage (human-readable)
free -h                  # Memory usage
top                      # View running processes
htop                     # Interactive process viewer
lscpu                    # CPU info
lsblk                    # Block devices (disks/partitions)
dmesg | less             # Kernel ring buffer messages
iostat                      # CPU and I/O stats
vmstat                      # Virtual memory stats
sar                         # System activity report

# ================= NETWORKING =================
ip a                     # Show IP addresses
ifconfig                 # Show network interfaces (old)
ping host                # Ping host
curl url                 # Fetch URL data
wget url                 # Download file from URL
netstat -tulnp           # Listening ports & processes
ss -tulnp                # Socket stats (newer)
traceroute host          # Trace network path
nslookup domain          # DNS lookup
dig domain               # Detailed DNS info

# ================= PROCESS MANAGEMENT =================
ps aux                   # List processes
ps -ef                   # List processes (alt format)
kill PID                 # Kill process by PID
kill -9 PID              # Force kill
pkill name               # Kill by process name
pgrep name               # Get PID by name
jobs                     # List background jobs
bg %1                    # Resume job in background
fg %1                    # Bring job to foreground

# ================= DISK MANAGEMENT =================
df -h                    # Disk space usage
du -sh dir               # Directory size
mount /dev/sdX /mnt      # Mount disk
umount /mnt              # Unmount disk
lsblk                    # List block devices
blkid                    # List block device UUIDs
fdisk -l                 # Partition table
mkfs.ext4 /dev/sdX       # Format partition ext4

# ================= BASIC LINUX DIRECTORY STRUCTURE =================
/                        # Root directory
/bin                     # Essential binaries
/sbin                    # System binaries
/usr/bin                 # User binaries
/usr/sbin                # Admin binaries
/var                     # Variable files (logs, spool)
/etc                     # Config files
/home                    # User home directories
/tmp                     # Temporary files
/opt                     # Optional software
/proc                    # Process info
/dev                     # Device files
/mnt or /media           # Mount points

# ================= PERMISSIONS & OWNERSHIP =================
chmod 755 file.txt    # Change permissions
chown user file.txt   # Change owner
chgrp group file.txt  # Change group ownership

# ================= ARCHIVE & COMPRESSION =================
tar -cvf file.tar dir       # Create tar archive
tar -xvf file.tar           # Extract tar archive
gzip file.txt               # Compress file
gunzip file.txt.gz          # Decompress file
zip file.zip file1 file2    # Create zip archive
unzip file.zip              # Extract zip archive

# ================= PACKAGE MANAGEMENT =================
# Debian/Ubuntu
apt update && apt upgrade   # Update system
apt install package         # Install package
apt remove package          # Remove package

# RHEL/CentOS/Fedora
yum install package         # Install package
dnf install package         # Install package (newer systems)

# ================= SERVICE MANAGEMENT =================
systemctl status service    # Check service status
systemctl start service     # Start service
systemctl stop service      # Stop service
systemctl restart service   # Restart service
systemctl enable service    # Enable service at boot
systemctl disable service   # Disable service at boot

# ================= SCHEDULING TASKS =================
crontab -e                  # Edit cron jobs
crontab -l                  # List cron jobs
at 14:00                    # Schedule a command at a time

# ================= SELINUX / FIREWALL BASICS =================
getenforce                  # Check SELinux mode
setenforce 0                # Set SELinux to permissive
setenforce 1                # Set SELinux to enforcing
firewall-cmd --state        # Check firewall status
firewall-cmd --list-all     # List firewall rules
